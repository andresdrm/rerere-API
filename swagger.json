{
  "swagger": "2.0",
  "info": {
    "title": "Rerere - API",
    "description": "Este es el API del laboratorio de backend para la aplicación Rerere",
    "version": "0.0.1"
  },
  "host": "localhost:7500",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Ingrese su token bearer"
    }
  },

  "paths": {
    "/upload": {
      "post": {
        "tags": [
          "Upload Image"
        ],
        "name": "file",
        "summary": "Sube una imagen de producto",
        "description": "Upload para las imágenes de los productos",
        "operationId": "uploadFile",
        "consumes": "multipart/form-data",
        "security":[
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "file",
  "in": "formData",
  "description": "The file of the user",
  "required": true,
  "type": "file"

           }
          
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/uploadUser": {
      "post": {
        "tags": [
          "Upload Image"
        ],
        "summary": "Sube una imagen a usuario",
        "description": "Upload para las imágenes de los usuarios",
        "consumes": "multipart/form-data",
        "produces": "application/json",
        "parameters": [
          {
            "name": "picture",
            "in": "formData",
            "type": "file"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/users/": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Retorna la lista de usuarios",
        "description": "Devuelve una lista de los usuarios",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Se utiliza para ingresar al sitio",
        "description": "Se utiliza para ingresar al sitio, devuelve la información del usuario con su respectivo token",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "example": "lotazi@mailo.icu"
                },
                "contrasena": {
                  "example": "asdf1234"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/recover-password": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Se utiliza para cambiar la contraseña.",
        "description": "Envía un correo para cambiar la contraseña por medio de un código.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "example": "lotazi@mailo.icu"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/createUser": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Crea un usuario",
        "description": "Se ingresan los datos para crear un usuario",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "Andrés"
                },
                "email": {
                  "example": "andres@gmail.com"
                },
                "contrasena": {
                  "example": "asdf1234"
                },
                "phone": {
                  "example": "99999999"
                },
                "picture": {
                  "example": ""
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "409": {
            "description": "Conflict: User already exists"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/changePassword": {
      "patch": {
        "tags": [
          "Users"
        ],
        "summary": "Se utiliza para cambiar la contraseña.",
        "description": "Es utilizado para cambiar el password, es necesario utilizar el código y la fecha dada en recover-password",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "example": "lotazi@mailo.icu"
                },
                "contrasena": {
                  "example": "asdf4321"
                },
                "confirmarContrasena": {
                  "example": "asdf4321"
                },
                "code": {
                  "example": "any"
                },
                "codigoExpiracion": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "204": {
            "description": "No Content"
          },
          "401": {
            "description": "Unauthorized"
          },
          "422": {
            "description": "Unprocessable Entity"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/editUser/:id": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Se utiliza para editar un usuario.",
        "description": "Se edita la información de un usuario, se debe ingresar un correo existente. Debe hacer login y agregar el Bearer",
        "security":[
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "Maria Martinez"
                },
                "email": {
                  "example": "lotazi@mailo.icu"
                },
                "contrasena": {
                  "example": "asdf1234"
                },
                "nuevaContrasena": {
                  "example": "asdf4321"
                },
                "phone": {
                  "example": 88888888
                },
                "picture": {
                  "example": "https://ci0137.s3.amazonaws.com/rerere/users/senorasonriente.jpg"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "409": {
            "description": "Conflict: User already exists"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/products/": {
      "get": {
        "tags": [
          "Product"
        ],
        "summary": "Retorna los productos.",
        "description": "Retorna una lista de todos los productos.",
        "security":[
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "422": {
            "description": "Unprocessable Entity"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/products/createProduct": {
      "post": {
        "tags": [
          "Product"
        ],
        "summary": "Retorna los productos.",
        "description": "Retorna una lista de todos los productos.",
        "security":[
          {
            "Bearer": []
          }
        ],
        "parameters":[
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "Botellas acua"
                },
                "company": {
                  "example": "EcoBotellas"
                },
                "amount": {
                  "example": "5"
                },
                "price": {
                  "example": 500
                },
                "description": {
                  "example": "Botellas de agua ecológicas."
                },
                "category": {
                  "example": "https://ci0137.s3.amazonaws.com/rerere/users/senorasonriente.jpg"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/products/userProducts": {
      "post": {
        "tags": [
          "Product"
        ],
        "summary": "Retorna los productos del usuario.",
        "description": "Ingresando el email del usuario y su token, le retorna sus productos.",
        "security":[
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "example": "lotazi@mailo.icu"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "422": {
            "description": "Unprocessable Entity"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/products/productList": {
      "post": {
        "tags": [
          "Product"
        ],
        "summary": "Retorna los productos filtrados.",
        "description": "Filtras los productos según las letras dadas y retorna la lista de productos.",
        "security":[
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "b"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "422": {
            "description": "Unprocessable Entity"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/products/productCategory": {
      "post": {
        "tags": [
          "Product"
        ],
        "summary": "Retorna los productos filtrados por category.",
        "description": "Filtras los productos según la categoría dada y retorna la lista de productos.",
        "security":[
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "category": {
                  "example": "vivero"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Invalid: Category not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "AddUser": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "CI0137"
        },
        "email": {
          "type": "string",
          "example": "cloud@polpocr.com"
        },
        "password": {
          "type": "string",
          "example": "patito"
        },
        "phone": {
          "type": "number",
          "example": 70155104
        },
        "picture": {
          "type": "string",
          "example": "https://ci0137.s3.amazonaws.com/rerere/users/senorasonriente.jpg"
        }
      }
    },
    "AddProduct": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Ambientador"
        },
        "company": {
          "type": "string",
          "example": "Ambientador"
        },
        "amount": {
          "type": "number",
          "example": "2"
        },
        "price": {
          "type": "number",
          "example": 1000
        },
        "description": {
          "type": "string",
          "example": "Esto es un ambientador"
        },
        "picture": {
          "type": "string",
          "example": "https://ci0137.s3.amazonaws.com/rerere/products/Ambientador.jpg"
        }
      }
    }
  }
}